[Unit]
Description=smart energy gateway v${${PROJECT_NAME}_VERSION_MAJOR}.${${PROJECT_NAME}_VERSION_MINOR}.${${PROJECT_NAME}_VERSION_PATCH} (project ${PROJECT_NAME})
#
# use this dependency when running on the same machine
#
After=network.target
Requires=network.target
After=oecp.service

[Service]
Type=simple
ExecStart=${CLS_PATH_SCRIPT}/segw -C ${CLS_PATH_ETC}/segw_v${${PROJECT_NAME}_VERSION_MAJOR}.${${PROJECT_NAME}_VERSION_MINOR}.cfg --setup.pool-size=4
Restart=on-failure
RestartSec=12

[Install]
WantedBy=multi-user.target
